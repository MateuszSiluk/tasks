/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "paths": {
      "navbar": [
        "dist/navbar/navbar",
        "dist/navbar"
      ],
      "dates": [
        "dist/dates/dates",
        "dist/dates"
      ],
      "@navbar": ["projects/navbar/src/public-api.ts"],
      "@dates": [
        "projects/dates/src/public-api.ts"
      ],
      "@pictures": [
        "projects/pictures/src/public-api.ts"
      ],
      "@task": [
        "projects/task/src/public-api.ts"
      ],
      "pictures": [
        "dist/pictures/pictures",
        "dist/pictures"
      ],
      "task": [
        "dist/task/task",
        "dist/task"
      ]
    },
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2017",
    "module": "es2020",
    "lib": [
      "es2020",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
